{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "check",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "clear": true,
        "revealProblems": "onProblem"
      }
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "clear": true
      }
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$tslint5"],
      "presentation": {
        "clear": true,
        "revealProblems": "onProblem"
      }
    }
  ]
}
